[Unit]
Description=Celery workers to consume VFD tasks
After=network.target
StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
User=pi
Restart=on-failure
RestartSec=5s
WorkingDirectory=/home/pi/vfd
ExecStart=celery -A tasks worker --loglevel=INFO --concurrency=1
Environment="BROKER_URL="

[Install]
WantedBy=multi-user.target